{
    "name": "clementdecou/simply-framework",
    "type": "wordpress-muplugin",
    "license": "MIT",
    "require": {
        "php": ">= 8.0",
        "symfony/dependency-injection": "^6.0",
        "symfony/config": "^6.0",
        "symfony/finder": "^6.0",
        "symfony/yaml": "^6.0",
        "symfony/proxy-manager-bridge": "^6.0",
        "twig/twig": "^3.3"
    },
    "require-dev": {
        "brain/monkey": "~2.6",
        "phpunit/phpunit": "~9.5"
    },
    "autoload": {
        "psr-4": {
            "Simply\\Core\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Simply\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "Composer\\Config::disableProcessTimeout",
            "phpunit"
        ],
        "coverage": [
            "Composer\\Config::disableProcessTimeout",
            "phpunit --coverage-text"
        ],
        "coverage-html": [
            "Composer\\Config::disableProcessTimeout",
            "phpunit --coverage-html /var/www/wordpress/build/coverage"
        ]
    }
}
